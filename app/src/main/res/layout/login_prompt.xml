<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/ce_emptynotif"
        >

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="M"
                    android:textColor="#28B04A"
                    android:textSize="200sp"
                    android:fontFamily="@font/pattaya"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginFarmer"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="8dp"
                    android:text="Continue as a Farmer"
                    android:textAllCaps="false"
                    app:backgroundTint="#384A87"
                    app:layout_constraintEnd_toEndOf="@+id/loginAgrovet"
                    app:layout_constraintStart_toStartOf="@+id/loginAgrovet"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"/>

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Welcome to Market Gate"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image"
                    android:fontFamily="@font/nunito_semibold"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginAgent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="8dp"
                    android:text="Continue as an Agent"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="@+id/loginAgrovet"
                    app:layout_constraintStart_toStartOf="@+id/loginAgrovet"
                    app:layout_constraintTop_toBottomOf="@+id/loginFarmer"
                    />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginAgrovet"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="40dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="8dp"
                    android:text="Continue as an Agrovet"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/loginAgent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:contentDescription="@string/content_description"
            android:minHeight="150dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/illus"/>

</androidx.constraintlayout.widget.ConstraintLayout>